{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    "rootDir": "${packageName}",
    "experimentalDecorators": true,
    "outDir": "./dist"
  },
  "include": [
    "${packageName}/*.ts",
    "${packageName}/**/*"
  ],
  "exclude": [
    "node_modules",
    "compile",
    "generate",
    "template",
    "${packageName}/views"
  ]
}